# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster0.xyz.mongodb.net/specialistdb_prod?appName=Cluster0

# Environment
NODE_ENV=production
PORT=8080
FRONTEND_URL=https://yourdomain.com

# Google Credentials
# For production (Railway): Use GOOGLE_CREDENTIALS_BASE64 instead
# Encode credentials.json to base64 using: node -e "console.log(require('fs').readFileSync('./credentials.json').toString('base64'))"
# Then set: GOOGLE_CREDENTIALS_BASE64=<base64-string>

# For local development: Use file path
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GOOGLE_CREDENTIALS_BASE64=

# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-app-password

# CORS
CORS_ORIGIN=https://yourdomain.com

# JWT
JWT_SECRET=your-secret-key

# User-Managed OAuth (Zoom)
ZOOM_USER_MANAGED_CLIENT_ID=your_zoom_client_id
ZOOM_USER_MANAGED_CLIENT_SECRET=your_zoom_client_secret

# Cloudflare Stream (for HLS video delivery)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_TEST_KEY_HERE
ZOOM_REDIRECT_URI=https://yourdomain.com/api/zoom/oauth/user-callback
